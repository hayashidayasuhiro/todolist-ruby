<h1><%= t(controller_name) %></h1>

<%= render :partial => "shared/error", :collection => @todo.errors.full_messages if @todo.errors.any? %>

<div class="card">
  <div class="card-body">
    <h5 class="card-title"><%= t('page.todo.edit.form') %></h5>
    <%= form_for @todo, :url => { action: :edit, id: @todo.id }, :html => { method: 'post' } do |f| %>
      <div class="form-group row">
        <div class="col-sm-2">
          <%= f.label :title, :class => 'col-form-label' %>
        </div>
        <div class="col-sm-5">
          <%= f.text_field :title, :class => 'form-control' %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-sm-2">
          <%= f.label :limited_at, :class => 'col-form-label' %>
        </div>
        <div class="col-sm-5">
          <%= f.date_field :limited_at, :class => 'form-control' %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-sm-10 col-sm-offset-2">
          <%= f.submit :class => 'btn btn-primary' %>
        </div>
      </div>
    <% end %>
  </div>
</div>